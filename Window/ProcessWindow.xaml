<Window x:Class="LandOfRailsLauncher.Window.ProcessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LandOfRailsLauncher.Window"
        mc:Ignorable="d"
        Title="ProcessWindow" Height="450" Width="800" Background="DarkGray">
    <Grid>
        <Rectangle Fill="#FF444444" Height="40" Stroke="Black" VerticalAlignment="Top"/>
        <Button Content="Kill" Name="KillButton" Click="KillButton_OnClick" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75"/>
        <ScrollViewer Name="ScrollViewer" Margin="0,40,0,10">
            <TextBlock TextWrapping="Wrap" Text="Prozess startet..." Name="consoleText"/>
        </ScrollViewer>

    </Grid>
</Window>
